<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#4d4d4d"
    android:id="@+id/mRootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/mBackgroundIcon"
        android:elevation="4dp"
        android:background="#008939"
        android:layout_width="match_parent"
        android:layout_height="130dp">

        <ImageView
            android:id="@+id/mIcon"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:tint="@color/white"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/dialog_icon"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <RelativeLayout
            android:id="@+id/mBackgroundIconHighlight"
            android:background="@drawable/dialog_highlight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/mTitle"
        android:padding="2dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:textSize="21sp"
        android:textStyle="bold"
        android:text="Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/mTextMessages"
        android:padding="2dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_margin="2dp"
        android:textSize="15sp"
        android:text="Message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/m2"
        android:layout_weight="2"
        android:layout_margin="10dp"
        android:layout_gravity="right"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_weight="1"
            android:elevation="4dp"
            android:id="@+id/mLeft"
            android:background="@drawable/dialog_selector_button"
            android:textColor="@color/white"
            android:padding="2dp"
            android:textSize="17sp"
            android:textAllCaps="false"
            android:textStyle="normal"
            android:text="Left"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="35dp" />

        <Button
            android:layout_weight="1"
            android:elevation="4dp"
            android:id="@+id/mRight"
            android:background="@drawable/dialog_selector_button"
            android:textColor="@color/white"
            android:padding="2dp"
            android:textSize="17sp"
            android:textAllCaps="false"
            android:textStyle="normal"
            android:text="Right"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="35dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/m1"
        android:visibility="gone"
        android:layout_weight="2"
        android:layout_margin="10dp"
        android:layout_gravity="right"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_weight="1"
            android:elevation="4dp"
            android:id="@+id/mCenter"
            android:background="@drawable/dialog_selector_button"
            android:textColor="@color/white"
            android:padding="2dp"
            android:textSize="17sp"
            android:textStyle="normal"
            android:text="Center"
            android:textAllCaps="false"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="35dp" />

    </LinearLayout>

</LinearLayout>